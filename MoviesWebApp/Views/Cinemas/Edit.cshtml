@model Cinema

@{
    ViewData["Title"] = "Update Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <img id="CinemaLogoPreview" class="border-info rounded-circle mb-4 mx-auto d-block" style="max-width: 150px" />
                    
                    <div class="form-control mb-4">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-control mb-4">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-control mb-4">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-primary" asp-action="Index">Show All</a>
                    </div>
                </form>
                
        </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            $(document).ready(function() { 
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#Logo").val(); })

            $("#Logo").on("change", function() {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $(this).val();})
        </script>
    </div>
</div>



